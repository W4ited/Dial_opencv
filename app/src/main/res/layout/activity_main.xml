<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/test_img1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>

    <ImageView
        android:layout_toRightOf="@id/test_img1"
        android:id="@+id/test_img2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>

    <ImageView
        android:layout_below="@id/test_img1"
        android:id="@+id/test_img3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>

    <ImageView
        android:layout_below="@id/test_img1"
        android:layout_toRightOf="@id/test_img3"
        android:id="@+id/test_img4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>
    <ImageView
        android:layout_below="@id/test_img3"
        android:id="@+id/test_img5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>

    <ImageView
        android:layout_below="@id/test_img3"
        android:layout_toRightOf="@id/test_img5"
        android:id="@+id/test_img6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/meter"/>

    <Button
        android:layout_below="@id/test_img5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_start"
        android:text="开始"
        android:layout_margin="20dp"
        android:background="@color/white"/>

</RelativeLayout>